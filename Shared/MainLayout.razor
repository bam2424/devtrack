@inherits LayoutComponentBase
@inject IJSRuntime JSRuntime

<PageTitle>DevTrack</PageTitle>

<div class="d-flex vh-100">
    <!-- Sidebar -->
    <nav class="d-flex flex-column bg-card border-end" style="width: 280px; min-height: 100vh;">
        <div class="p-4 border-bottom">
            <div class="d-flex align-items-center justify-content-between">
                <h4 class="mb-0 fw-bold" style="color: var(--accent-primary);">
                    <i class="fas fa-code me-2"></i>DevTrack
                </h4>
                <button class="theme-toggle" @onclick="ToggleTheme" title="Toggle theme">
                    <i class="fas @(_isDarkTheme ? "fa-sun" : "fa-moon")"></i>
                </button>
            </div>
        </div>
        
        <div class="flex-grow-1 p-3">
            <NavMenu />
        </div>
        
        <div class="p-3 border-top">
            <div class="d-flex align-items-center text-muted">
                <i class="fas fa-user-circle me-2"></i>
                <small>Welcome back!</small>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main class="flex-grow-1 d-flex flex-column" style="background-color: var(--bg-primary);">
        <!-- Page Content -->
        <div class="flex-grow-1 p-4" style="overflow-y: auto;">
            <div class="container-fluid">
                @Body
            </div>
        </div>
    </main>
</div>

@code {
    private bool _isDarkTheme = true;

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            var theme = await JSRuntime.InvokeAsync<string>("localStorage.getItem", "theme");
            _isDarkTheme = theme == "dark" || string.IsNullOrEmpty(theme);
            await SetTheme(_isDarkTheme);
            StateHasChanged();
        }
    }

    private async Task ToggleTheme()
    {
        _isDarkTheme = !_isDarkTheme;
        await SetTheme(_isDarkTheme);
        await JSRuntime.InvokeVoidAsync("localStorage.setItem", "theme", _isDarkTheme ? "dark" : "light");
    }

    private async Task SetTheme(bool isDark)
    {
        await JSRuntime.InvokeVoidAsync("document.body.setAttribute", "data-theme", isDark ? "dark" : "light");
    }


}
