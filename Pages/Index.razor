@page "/"

<PageTitle>Dashboard - DevTrack</PageTitle>

<div class="fade-in">
    <!-- Welcome Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div>
                <h2 class="mb-1">Welcome back! 👋</h2>
                <p class="text-muted mb-0">Here's what's happening with your projects today.</p>
            </div>
        </div>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Total Projects</h6>
                            <h3 class="mb-0">12</h3>
                        </div>
                        <div class="bg-primary rounded-circle p-3">
                            <i class="fas fa-folder text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Active Tasks</h6>
                            <h3 class="mb-0">34</h3>
                        </div>
                        <div class="bg-warning rounded-circle p-3">
                            <i class="fas fa-tasks text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Completed</h6>
                            <h3 class="mb-0">128</h3>
                        </div>
                        <div class="bg-success rounded-circle p-3">
                            <i class="fas fa-check text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 col-sm-6 mb-3">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="text-muted mb-1">Hours Logged</h6>
                            <h3 class="mb-0">156h</h3>
                        </div>
                        <div class="bg-info rounded-circle p-3">
                            <i class="fas fa-clock text-white"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Projects & Activity -->
    <div class="row">
        <!-- Recent Projects -->
        <div class="col-lg-8 mb-4">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Recent Projects</h5>
                        <a href="/projects" class="btn btn-outline-primary btn-sm">View All</a>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Project 1 -->
                    <div class="d-flex align-items-center p-3 mb-3 rounded" style="background-color: var(--bg-secondary);">
                        <div class="bg-primary rounded p-2 me-3">
                            <i class="fas fa-code text-white"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">E-Commerce Platform</h6>
                            <p class="text-muted mb-1">5 active tasks • 2 team members</p>
                            <div class="progress" style="height: 4px;">
                                <div class="progress-bar bg-primary" style="width: 75%"></div>
                            </div>
                        </div>
                        <div class="text-end">
                            <small class="text-muted">75% complete</small>
                        </div>
                    </div>
                    
                    <!-- Project 2 -->
                    <div class="d-flex align-items-center p-3 mb-3 rounded" style="background-color: var(--bg-secondary);">
                        <div class="bg-success rounded p-2 me-3">
                            <i class="fas fa-mobile-alt text-white"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Mobile App Redesign</h6>
                            <p class="text-muted mb-1">3 active tasks • 4 team members</p>
                            <div class="progress" style="height: 4px;">
                                <div class="progress-bar bg-success" style="width: 45%"></div>
                            </div>
                        </div>
                        <div class="text-end">
                            <small class="text-muted">45% complete</small>
                        </div>
                    </div>
                    
                    <!-- Project 3 -->
                    <div class="d-flex align-items-center p-3 rounded" style="background-color: var(--bg-secondary);">
                        <div class="bg-warning rounded p-2 me-3">
                            <i class="fas fa-chart-line text-white"></i>
                        </div>
                        <div class="flex-grow-1">
                            <h6 class="mb-1">Analytics Dashboard</h6>
                            <p class="text-muted mb-1">8 active tasks • 3 team members</p>
                            <div class="progress" style="height: 4px;">
                                <div class="progress-bar bg-warning" style="width: 20%"></div>
                            </div>
                        </div>
                        <div class="text-end">
                            <small class="text-muted">20% complete</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="col-lg-4 mb-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Activity</h5>
                </div>
                <div class="card-body">
                    <div class="d-flex align-items-start mb-3">
                        <div class="bg-success rounded-circle p-1 me-3 mt-1">
                            <i class="fas fa-check text-white" style="font-size: 0.7rem;"></i>
                        </div>
                        <div class="flex-grow-1">
                            <p class="mb-1">Task "User Authentication" completed</p>
                            <small class="text-muted">2 hours ago</small>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-start mb-3">
                        <div class="bg-primary rounded-circle p-1 me-3 mt-1">
                            <i class="fas fa-plus text-white" style="font-size: 0.7rem;"></i>
                        </div>
                        <div class="flex-grow-1">
                            <p class="mb-1">New task "Database Migration" created</p>
                            <small class="text-muted">4 hours ago</small>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-start mb-3">
                        <div class="bg-warning rounded-circle p-1 me-3 mt-1">
                            <i class="fas fa-clock text-white" style="font-size: 0.7rem;"></i>
                        </div>
                        <div class="flex-grow-1">
                            <p class="mb-1">2.5 hours logged on "API Development"</p>
                            <small class="text-muted">1 day ago</small>
                        </div>
                    </div>
                    
                    <div class="d-flex align-items-start">
                        <div class="bg-info rounded-circle p-1 me-3 mt-1">
                            <i class="fas fa-comment text-white" style="font-size: 0.7rem;"></i>
                        </div>
                        <div class="flex-grow-1">
                            <p class="mb-1">Comment added to "Frontend Components"</p>
                            <small class="text-muted">2 days ago</small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
