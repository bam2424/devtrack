@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Complete Registration";
}

<div class="text-center mb-4">
    <div class="auth-success-icon mb-3">
        <i class="fab fa-google fa-3x text-success"></i>
    </div>
    <h1 class="h3 fw-bold text-white mb-2">Almost There!</h1>
    <h2 class="h5 text-muted mb-3">Associate your @Model.ProviderDisplayName account</h2>
</div>

<div class="auth-status-card mb-4">
    <div class="d-flex align-items-center">
        <i class="fas fa-check-circle text-success me-3"></i>
        <div>
            <p class="mb-1 fw-medium text-white">Authentication Successful</p>
            <p class="mb-0 small text-muted">
                You've successfully authenticated with <strong class="text-success">@Model.ProviderDisplayName</strong>
            </p>
        </div>
    </div>
</div>

<div class="auth-form-section">
    <p class="text-center text-muted mb-4">
        Please confirm your email address to complete the registration process.
    </p>
    
    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        
        <div class="mb-4">
            <label asp-for="Input.Email" class="form-label">
                <i class="fas fa-envelope me-2"></i>Email Address
            </label>
            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="email"/>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
            <i class="fas fa-user-plus me-2"></i>Complete Registration
        </button>
        

    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Force dark mode for entire page */
    html, body {
        background-color: #0f172a !important;
        color: #f1f5f9 !important;
        margin: 0 !important;
        padding: 0 !important;
    }
    
    /* Override any Bootstrap white backgrounds */
    .container, .container-fluid, .row, .col, div {
        background-color: transparent !important;
    }
    
    /* Dark mode enhanced styles for Google OAuth page */
    .auth-success-icon {
        animation: successPulse 2s ease-in-out infinite;
    }
    
    @@keyframes successPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    
    .auth-status-card {
        background: rgba(16, 185, 129, 0.15);
        border: 1px solid rgba(16, 185, 129, 0.3);
        border-radius: 1rem;
        padding: 1.25rem;
        margin-bottom: 1.5rem;
        backdrop-filter: blur(10px);
    }
    
    .auth-form-section .form-control {
        background: rgba(15, 23, 42, 0.7);
        border: 1px solid rgba(148, 163, 184, 0.3);
        border-radius: 1rem;
        padding: 1rem 1.25rem;
        font-size: 1rem;
        color: #e2e8f0;
        transition: all 0.3s ease;
    }
    
    .auth-form-section .form-control:focus {
        background: rgba(15, 23, 42, 0.9);
        border-color: #60a5fa;
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(96, 165, 250, 0.25);
        color: #f1f5f9;
    }
    
    .auth-form-section .form-control::placeholder {
        color: #94a3b8;
    }
    
    .auth-form-section .btn-primary {
        background: linear-gradient(135deg, #6366f1 0%, #4f46e5 100%);
        border: none;
        border-radius: 1rem;
        font-weight: 600;
        padding: 1rem 1.5rem;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(99, 102, 241, 0.3);
    }
    
    .auth-form-section .btn-primary:hover {
        background: linear-gradient(135deg, #5b57f4 0%, #4338ca 100%);
        transform: translateY(-2px);
        box-shadow: 0 12px 30px rgba(99, 102, 241, 0.4);
    }
    
    .form-label {
        color: #cbd5e1;
        font-weight: 500;
        margin-bottom: 0.5rem;
        display: block;
    }
    
    .alert-danger {
        background: rgba(239, 68, 68, 0.15);
        border: 1px solid rgba(239, 68, 68, 0.3);
        color: #fca5a5;
        border-radius: 1rem;
        backdrop-filter: blur(10px);
    }
    
    .text-success {
        color: #10b981 !important;
    }
    
    .text-primary {
        color: #60a5fa !important;
        text-decoration: none;
    }
    
    .text-primary:hover {
        color: #3b82f6 !important;
        text-decoration: underline;
    }
    
    .text-white {
        color: #f1f5f9 !important;
    }
    
    .text-muted {
        color: #94a3b8 !important;
    }
    
    /* Enhanced Google icon styling */
    .fab.fa-google {
        color: #10b981;
        text-shadow: 0 2px 8px rgba(16, 185, 129, 0.3);
    }
    
    /* Improved layout spacing */
    .auth-form-section {
        margin-top: 0.5rem;
    }
    
    /* Better visual hierarchy */
    h1.h3 {
        font-weight: 700;
        letter-spacing: -0.025em;
        margin-bottom: 0.5rem;
    }
    
    h2.h5 {
        font-weight: 500;
        opacity: 0.9;
    }
</style>
