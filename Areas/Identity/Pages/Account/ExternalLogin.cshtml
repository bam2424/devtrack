@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Complete Registration";
}

<div class="text-center mb-4">
    <div class="auth-success-icon mb-3">
        <i class="fab fa-google fa-3x text-success"></i>
    </div>
    <h1 class="h3 fw-bold text-white mb-2">Almost There!</h1>
    <h2 class="h5 text-muted mb-3">Associate your @Model.ProviderDisplayName account</h2>
</div>

<div class="auth-status-card mb-4">
    <div class="d-flex align-items-center">
        <i class="fas fa-check-circle text-success me-3"></i>
        <div>
            <p class="mb-1 fw-medium text-white">Authentication Successful</p>
            <p class="mb-0 small text-muted">
                You've successfully authenticated with <strong class="text-success">@Model.ProviderDisplayName</strong>
            </p>
        </div>
    </div>
</div>

<div class="auth-form-section">
    <p class="text-center text-muted mb-4">
        Please confirm your email address to complete the registration process.
    </p>
    
    <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
        
        <div class="form-floating mb-4">
            <input asp-for="Input.Email" class="form-control form-control-lg" autocomplete="email" placeholder="name@example.com"/>
            <label asp-for="Input.Email" class="form-label">
                <i class="fas fa-envelope me-2"></i>Email Address
            </label>
            <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary btn-lg w-100 mb-3">
            <i class="fas fa-user-plus me-2"></i>Complete Registration
        </button>
        
        <div class="text-center">
            <small class="text-muted">
                By continuing, you agree to our 
                <a href="#" class="text-primary">Terms of Service</a>
            </small>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .auth-success-icon {
        animation: successPulse 2s ease-in-out infinite;
    }
    
    @@keyframes successPulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.05); }
    }
    
    .auth-status-card {
        background: rgba(16, 185, 129, 0.1);
        border: 1px solid rgba(16, 185, 129, 0.2);
        border-radius: 0.75rem;
        padding: 1rem;
        margin-bottom: 1.5rem;
    }
    
    .auth-form-section .form-control {
        border-radius: 0.75rem;
        padding: 0.75rem 1rem;
        font-size: 1rem;
        transition: all 0.2s ease;
    }
    
    .auth-form-section .form-control:focus {
        transform: translateY(-1px);
        box-shadow: 0 4px 12px rgba(96, 165, 250, 0.2);
    }
    
    .auth-form-section .btn-primary {
        background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%);
        border: none;
        border-radius: 0.75rem;
        font-weight: 600;
        padding: 0.875rem 1.5rem;
        transition: all 0.2s ease;
    }
    
    .auth-form-section .btn-primary:hover {
        background: linear-gradient(135deg, #2563eb 0%, #1e40af 100%);
        transform: translateY(-1px);
        box-shadow: 0 8px 25px rgba(59, 130, 246, 0.3);
    }
    
    .form-floating > label {
        color: #94a3b8;
        font-weight: 500;
    }
    
    .alert-danger {
        background: rgba(239, 68, 68, 0.1);
        border: 1px solid rgba(239, 68, 68, 0.2);
        color: #fca5a5;
        border-radius: 0.75rem;
    }
    
    .text-success {
        color: #10b981 !important;
    }
    
    .text-primary {
        color: #60a5fa !important;
        text-decoration: none;
    }
    
    .text-primary:hover {
        color: #3b82f6 !important;
        text-decoration: underline;
    }
</style>
