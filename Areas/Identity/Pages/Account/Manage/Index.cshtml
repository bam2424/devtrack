@page
@model IndexModel
@{
    ViewData["Title"] = "Edit Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="manage-container">
    <div class="back-button">
        <a href="/settings" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left me-2"></i>Back to Settings
        </a>
    </div>
    
    <div class="manage-header">
        <div class="manage-icon">
            <i class="fas fa-user-edit"></i>
        </div>
        <h1 class="manage-title">Edit Profile</h1>
        <p class="manage-subtitle">Update your account information and preferences</p>
    </div>

    <div class="manage-content">
        <partial name="_StatusMessage" for="StatusMessage" />
        
        <form id="profile-form" method="post" class="manage-form">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger validation-summary" role="alert"></div>
            
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-id-card me-2"></i>Account Information
                </h3>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Username" class="form-label">
                                <i class="fas fa-user me-2"></i>Username
                            </label>
                            <input asp-for="Username" class="form-control" disabled />
                            <div class="form-text">Your username cannot be changed</div>
                        </div>
                    </div>
                    
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.Email" class="form-label">
                                <i class="fas fa-envelope me-2"></i>Email Address
                            </label>
                            <input asp-for="Input.Email" class="form-control" type="email" autocomplete="email" />
                            <span asp-validation-for="Input.Email" class="validation-error"></span>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-section">
                <h3 class="section-title">
                    <i class="fas fa-phone me-2"></i>Contact Information
                </h3>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Input.PhoneNumber" class="form-label">
                                <i class="fas fa-mobile-alt me-2"></i>Phone Number
                            </label>
                            <input asp-for="Input.PhoneNumber" class="form-control" type="tel" autocomplete="tel" />
                            <span asp-validation-for="Input.PhoneNumber" class="validation-error"></span>
                            <div class="form-text">Optional - for account recovery purposes</div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-actions">
                <button id="update-profile-button" type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Save Changes
                </button>
                <a href="/settings" class="btn btn-secondary">
                    <i class="fas fa-times me-2"></i>Cancel
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

